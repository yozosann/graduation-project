padding_number=10px

delete()
  content: ''
  position: absolute
  top: 8px
  right: 2px
  height: 3px
  width: 12px
  background-color: red

.goodsinfo
  position: relative
  top: -1px
  height: 500px
  border-top: 1px solid grey
  .slot
    position: relative
    width: 400px
    padding: 30px 0px 12px
    box-sizing: border-box
    border-radius: 10px
    background-color: white
    text-align: left
    .close
      position: absolute
      right: 10px
      top: 10px
      height: 20px
      padding: 0 5px
      line-height: 20px
      border: 1px solid grey
      cursor: pointer
    .hint
      line-height: 20px
      padding: 20px
      border-bottom: 1px solid grey
    .goodlist
      .good-item
        text-align: center
        margin-bottom: 12px
        cursor: pointer
        transition: all 0.4s all
        &:first-child
          margin-top: 20px
        &:hover
          transform: scale(1.3,1.3)
  &:after
    content: ''
    position: absolute
    left: 138px
    top: -1px
    height: 1px
    width: 136px
    background-color: white
  .category
    margin-top: 30px
    padding-bottom: 20px
    border-bottom: 1px solid grey
    .text
      margin: 0 0 20px 10px
      .button
        float: right
    .good
      padding: padding_number padding_number 0 0
      margin: 0 auto
      .item  
        position: relative
        display: inline-block
        border: 1px solid grey
        border-radius: 3px
        width: 280px
        box-sizing: border-box
        padding: 10px
        margin: 0 0 padding_number padding_number
        .support
          margin-top: 10px
  .foods-wrapper
    .text
      margin: 30px 0 0 10px
      .button
        float: right
    .foods
      padding: 30px 40px 0
      font-size: 0
      .item
        display: inline-block
        position: relative
        box-sizing: border-box
        border: 1px solid grey
        padding: 16px 16px 6px
        border-radius: 3px
        width: 48%
        font-size: 16px
        margin-bottom: 40px
        &:nth-child(even)
          margin-left: 4%
        .base-content
          .base
            display: inline-block
            vertical-align: top
            margin-left: 30px
            p
              margin-bottom: 20px
        .description
          margin-bottom: 10px
          input
            width: 250px
        .info, .belong
          margin-bottom: 10px
        .label-wrapper
          max-width: 80%
          .label
            display: inline-block
            position: relative
            border: 1px solid grey
            font-size: 12px
            padding: 3px
            border-radius: 2px
            margin: 0 8px 10px 0
            padding-right: 20px
            cursor: pointer
            &:last-child
              padding: 3px
            .delete
              position: absolute
              top: 0
              right: 0
              height: 100%
              width: 14px
              transform: rotateZ(45deg)
              &:after
                delete()
              &:before
                delete()
                transform: rotateZ(90deg)

          