grey_blue=rgb(0 ,122, 204)
grey_main=#2c3e50

.sellerselect
  box-sizing: border-box
  height: 50px
  line-height: 50px
  margin:20px 30px 0 
  padding: 0 100px
  .slot
    width: 400px
    height: 400px
    padding: 20px 30px
    box-sizing: border-box
    border-radius: 10px
    background-color: white
    text-align: left
    .item
      &:first-child
        margin-top: 30px
    .buttom-wrapper
      margin-top: 50px
      text-align: center
  .current
    float: left
    .text
      font-weight: bold
  .select
    float: right
    position: relative
    line-height: 50px
    .text
      font-size: 16px
    .selectinput
      border: 1px solid grey
      padding: 5px 10px 5px 10px
      margin-left: 30px
      border-radius: 5px
      &:focus
        outline: none
        border-color: grey_blue
    .select-list
      position: absolute
      z-index: 9999
      right: 0
      top:45px
      width: 167px
      max-height: 300px
      overflow: auto
      padding: 5px 10px 5px 10px
      border: 1px solid grey
      border-radius: 5px
      background-color: grey_main
      .list-item
        color: white
        height: 30px
        line-height: 30px
        cursor: pointer
        border-radius: 5px
        transition: all 0.2s ease
        &:hover
          background-color: white
          color: grey_main
        


